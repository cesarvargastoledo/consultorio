{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
<div class="content-wrapper">
    <section class="content-header">
        <h1>Paciente</h1>
    </section>
    <div class="content">
        <div class="alert-danger">{{ form_errors(form) }}</div>
        <div class="col-md-12 col-sm-6 col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3>Datos del paciente</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Nombre(s)</label>
                                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                                <span class="text-dange">{{ form_errors(form.nombre) }}</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Apellido Paterno</label>
                                {{ form_widget(form.paterno, {'attr': {'class': 'form-control'}}) }}
                                <span class="text-danger">{{ form_errors(form.paterno) }}</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Apellido Materno</label>
                                {{ form_widget(form.materno, {'attr': {'class': 'form-control'}}) }}
                                <span class="text-danger">{{ form_errors(form.materno) }}</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Telefono</label>
                                {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                                <span class="text-danger">{{ form_errors(form.telefono) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form) }}
                    <input class="btn btn-primary btn-sm" type="submit" value="Guardar cambios">

                </div>
                <ul>
                    <li>
                        <a href="{{ path('paciente_index') }}">Back to the list</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>

    {{ form_end(form) }}


{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-html5-1.3.1/b-print-1.3.1/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready( function () {
            $('#academico_table').DataTable({
                "pageLength": 20,
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]

            });
        } );
    </script>


{% endblock %}
